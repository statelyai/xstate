  },
  "homepage": "https://github.com/davidkpiano/xstate#readme",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.33",
    "chai": "^4.1.2",
    "mocha": "^3.5.3",
    "prettier": "^1.7.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "webpack": "^3.5.6"
