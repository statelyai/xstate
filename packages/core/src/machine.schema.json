{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "jsonFunction": {
      "type": "object",
      "properties": {
        "$function": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "actionObject": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "exec": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/jsonFunction" }
          ]
        }
      },
      "required": ["type"]
    },
    "statesObject": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "properties": {
            "entry": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/actionObject"
              }
            },
            "exit": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/actionObject"
              }
            },
            "id": {
              "type": "string"
            },
            "key": {
              "type": "string"
            },
            "initial": {
              "type": "string"
            },
            "invoke": {
              "type": "array"
            },
            "on": {
              "$ref": "#/definitions/transitionsObject"
            },
            "states": {
              "$ref": "#/definitions/statesObject"
            },
            "type": {
              "type": "string",
              "enum": ["atomic", "compound", "parallel", "final", "history"]
            }
          },
          "required": ["id", "type"]
        }
      }
    },
    "transitionsObject": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "actions": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/actionObject"
                }
              },
              "cond": {
                "type": "object"
              },
              "eventType": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "target": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["actions", "eventType", "source", "target"]
          }
        }
      }
    }
  },
  "properties": {
    "id": {
      "title": "ID",
      "type": "string"
    },
    "initial": {
      "type": "string"
    },
    "states": {
      "$ref": "#/definitions/statesObject"
    }
  }
}
