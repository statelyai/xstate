{
  "name": "XState Dev Tools",
  "version": "0.2.1",
  "description": "Chrome Dev Tools Extension for XState",
  "devtools_page": "src/extension/devtools.html",
  "background": {
    "scripts": ["src/extension/hotReload.js", "src/extension/background.js"],
    "persistent": false
  },
  "icons": {
    "128": "assets/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/extension/contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": ["src/content/*.js"],
  "manifest_version": 2
}
